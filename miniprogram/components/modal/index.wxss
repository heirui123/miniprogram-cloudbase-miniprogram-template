.modal-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.45);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}
.modal {
  width: 640rpx;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}
.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  padding: 24rpx;
  border-bottom: 1rpx solid #eee;
}
.modal-body {
  padding: 24rpx;
}
.modal-footer {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  padding: 16rpx 24rpx 24rpx;
}
button.primary {
  background: #FF6B6B;
  color: #fff;
} 