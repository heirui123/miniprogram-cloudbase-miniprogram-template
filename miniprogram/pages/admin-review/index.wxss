/* admin-review/index.wxss */
.container {
  padding: 0 24rpx 24rpx;
  background: #F8F9FA;
  min-height: 100vh;
}

.filter-bar {
  background: #FFFFFF;
  padding: 24rpx;
  border-bottom: 1rpx solid #E9ECEF;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2C3E50;
}

.list {
  padding-top: 20rpx;
}

.card {
  background: #FFFFFF;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx 0 24rpx;
}

.service-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2C3E50;
  flex: 1;
  margin-right: 16rpx;
}

.badge {
  font-size: 22rpx;
  color: #4ECDC4;
  background: rgba(78, 205, 196, 0.1);
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

.card-body {
  padding: 12rpx 24rpx 0 24rpx;
}

.desc {
  font-size: 26rpx;
  color: #2C3E50;
  line-height: 1.6;
  margin-bottom: 12rpx;
}

.meta {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx 20rpx;
  padding-bottom: 16rpx;
}

.price { color: #FF6B6B; font-weight: 600; }
.yen { font-size: 24rpx; margin-right: 4rpx; }
.publisher { color: #7F8C8D; }
.time { color: #7F8C8D; }

.card-actions {
  display: flex;
  gap: 16rpx;
  padding: 16rpx 24rpx 20rpx 24rpx;
  border-top: 1rpx solid #E9ECEF;
}

.btn { flex: 1; }

.reason-input {
  width: 100%;
  min-height: 160rpx;
  background: #F8F9FA;
  border-radius: 12rpx;
  padding: 16rpx;
  font-size: 28rpx;
  color: #2C3E50;
} 