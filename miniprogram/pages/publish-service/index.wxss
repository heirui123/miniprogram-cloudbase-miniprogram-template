/* publish-service/index.wxss */

/* 页面容器：为固定提交条预留底部空间 */
.container {
  padding: 20rpx;
  background: #F8F9FA;
  padding-bottom: 160rpx;
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  text-align: center;
}

.page-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #2C3E50;
}

/* 区块卡片 */
.form-section {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2C3E50;
  margin-bottom: 20rpx;
}

/* 服务类型网格 */
.category-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #F8F9FA;
  border-radius: 16rpx;
  padding: 24rpx 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
}

.category-item.active {
  background: rgba(255, 107, 107, 0.08);
  border-color: #FF6B6B;
}

.category-icon {
  width: 96rpx;
  height: 96rpx;
  margin-bottom: 12rpx;
}

.category-name {
  font-size: 26rpx;
  color: #2C3E50;
}

/* 表单项 */
.form-item {
  margin-bottom: 20rpx;
}

.form-label {
  display: block;
  font-size: 26rpx;
  color: #7F8C8D;
  margin-bottom: 10rpx;
}

.form-input {
  width: 100%;
  height: 72rpx;
  background: #F8F9FA;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #2C3E50;
}

.form-textarea {
  width: 100%;
  min-height: 200rpx;
  background: #F8F9FA;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  font-size: 28rpx;
  color: #2C3E50;
}

/* 价格输入 */
.price-input-wrapper {
  display: flex;
  align-items: center;
  background: #F8F9FA;
  border-radius: 12rpx;
  padding: 0 20rpx;
  height: 72rpx;
}

.price-symbol {
  font-size: 28rpx;
  color: #FF6B6B;
  margin-right: 8rpx;
}

.price-input {
  flex: 1;
  background: transparent;
  padding: 0;
}

/* 价格单位选择器 */
.price-unit-picker {
  display: flex;
  align-items: center;
  background: #FFFFFF;
  border-radius: 8rpx;
  padding: 8rpx 16rpx;
  border: 1rpx solid #E9ECEF;
  margin-left: 12rpx;
}

.price-unit-text {
  font-size: 24rpx;
  color: #2C3E50;
  margin-right: 8rpx;
}

.arrow-down {
  width: 20rpx;
  height: 20rpx;
  opacity: 0.6;
}

/* 价格提示 */
.price-tip {
  display: block;
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #FF6B6B;
  line-height: 1.4;
}

/* 图片上传 */
.image-upload {}

.image-list {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.image-item {
  position: relative;
  width: 100%;
  height: 210rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.uploaded-image {
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.5);
  color: #FFFFFF;
  font-size: 28rpx;
}

.upload-btn {
  height: 210rpx;
  background: #F8F9FA;
  border: 2rpx dashed #E9ECEF;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #7F8C8D;
}

.upload-icon {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 8rpx;
  opacity: 0.8;
}

.upload-text {
  font-size: 24rpx;
}

.upload-tip {
  display: block;
  margin-top: 12rpx;
  font-size: 22rpx;
  color: #7F8C8D;
}

/* 地址选择 */
.location-selector {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #F8F9FA;
  border-radius: 12rpx;
  padding: 20rpx;
}

.location-info {
  display: flex;
  align-items: center;
  flex: 1;
  min-width: 0;
}

.location-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
  opacity: 0.9;
}

.location-text {
  flex: 1;
  font-size: 26rpx;
  color: #2C3E50;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.arrow-icon {
  width: 28rpx;
  height: 28rpx;
  margin-left: 16rpx;
  opacity: 0.5;
}

/* 标签选择 */
.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag-item {
  padding: 10rpx 20rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  background: #F8F9FA;
  color: #2C3E50;
  border: 2rpx solid transparent;
}

.tag-item.selected {
  background: rgba(255, 107, 107, 0.08);
  color: #FF6B6B;
  border-color: #FF6B6B;
}

/* 提交条 */
.submit-section {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #FFFFFF;
  padding: 20rpx 30rpx calc(20rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #E9ECEF;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.06);
  z-index: 100;
}

.submit-section .btn {
  width: 100%;
} 