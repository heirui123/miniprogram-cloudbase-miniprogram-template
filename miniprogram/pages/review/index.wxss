/* review/index.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f9fa;
}

/* 评价表单 */
.review-form {
  background: white;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.form-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.form-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.service-title {
  display: block;
  font-size: 28rpx;
  color: #666;
}

/* 评分区域 */
.rating-section {
  margin-bottom: 40rpx;
}

.rating-label {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.rating-stars {
  display: flex;
  justify-content: center;
  margin-bottom: 16rpx;
}

.star-item {
  font-size: 60rpx;
  color: #ddd;
  margin: 0 8rpx;
  transition: all 0.3s ease;
}

.star-item.active {
  color: #FFD700;
  transform: scale(1.1);
}

.rating-text {
  display: block;
  text-align: center;
  font-size: 28rpx;
  color: #666;
}

/* 评价内容 */
.review-content {
  margin-bottom: 40rpx;
}

.content-label {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.review-textarea {
  width: 100%;
  height: 200rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  background: #fafafa;
  box-sizing: border-box;
}

.char-count {
  display: block;
  text-align: right;
  font-size: 24rpx;
  margin-top: 12rpx;
  color: #999;
}

.char-count.valid {
  color: #52c41a;
}

.char-count.invalid {
  color: #ff4d4f;
}

/* 标签选择 */
.review-tags {
  margin-bottom: 40rpx;
}

.tags-label {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.tags-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-item {
  padding: 12rpx 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 24rpx;
  font-size: 26rpx;
  color: #666;
  background: white;
  transition: all 0.3s ease;
}

.tag-item.active {
  border-color: #FF6B6B;
  background: #FF6B6B;
  color: white;
}

/* 表单操作 */
.form-actions {
  display: flex;
  gap: 20rpx;
}

.btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.btn-outline {
  background: white;
  color: #666;
  border: 2rpx solid #e0e0e0;
}

.btn-primary {
  background: #FF6B6B;
  color: white;
}

.btn-primary:disabled {
  background: #ccc;
  color: #999;
}

/* 评价列表 */
.review-list {
  padding: 20rpx;
}

/* 评分统计 */
.rating-stats {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.stats-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.average-rating {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.rating-score {
  font-size: 48rpx;
  font-weight: bold;
  color: #FF6B6B;
}

.rating-count {
  text-align: right;
}

.count-text {
  font-size: 26rpx;
  color: #666;
}

.rating-distribution {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.distribution-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.star-label {
  font-size: 24rpx;
  color: #666;
  width: 60rpx;
}

.progress-bar {
  flex: 1;
  height: 16rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #FFD700, #FF6B6B);
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

.distribution-count {
  font-size: 24rpx;
  color: #666;
  width: 60rpx;
  text-align: right;
}

/* 列表头部 */
.list-header {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.list-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.filter-tabs {
  display: flex;
  gap: 20rpx;
}

.tab-item {
  flex: 1;
  height: 60rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: #FF6B6B;
  color: white;
}

/* 评价项目 */
.review-items {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.review-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.review-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.reviewer-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.reviewer-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 2rpx solid #f0f0f0;
}

.reviewer-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.reviewer-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.review-rating {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.rating-score {
  font-size: 24rpx;
  color: #FF6B6B;
  font-weight: bold;
}

.review-time {
  font-size: 24rpx;
  color: #999;
}

.review-content {
  margin-bottom: 20rpx;
}

.review-text {
  display: block;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.review-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.review-tags .tag-item {
  padding: 8rpx 16rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 16rpx;
  font-size: 22rpx;
  color: #666;
  background: #f8f9fa;
}

.review-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.service-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.service-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}

.service-provider {
  font-size: 24rpx;
  color: #666;
}

.review-actions {
  display: flex;
  gap: 12rpx;
}

.btn-small {
  height: 60rpx;
  padding: 0 24rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.btn-liked {
  background: #FF6B6B;
  color: white;
}

.like-icon {
  font-size: 24rpx;
}

.like-count {
  font-size: 24rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  padding: 40rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 加载完成 */
.load-more {
  display: flex;
  justify-content: center;
  padding: 40rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.load-more-text {
  font-size: 26rpx;
  color: #999;
} 