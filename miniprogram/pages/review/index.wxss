/* review/index.wxss */

.container {
  padding: 0;
  background: var(--background-color);
}

/* 评价表单 */
.review-form {
  padding: 20rpx;
}

.form-header {
  background: var(--card-color);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.form-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-color);
  display: block;
  margin-bottom: 15rpx;
}

.service-title {
  font-size: 28rpx;
  color: var(--text-light);
  display: block;
}

/* 评分区域 */
.rating-section {
  background: var(--card-color);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.rating-label {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--text-color);
  display: block;
  margin-bottom: 20rpx;
}

.rating-stars {
  display: flex;
  justify-content: center;
  margin-bottom: 15rpx;
}

.star-item {
  font-size: 60rpx;
  color: #ddd;
  margin: 0 10rpx;
  transition: color 0.3s;
}

.star-item.active {
  color: #FFD700;
}

.rating-text {
  font-size: 26rpx;
  color: var(--text-light);
  text-align: center;
  display: block;
}

/* 评价内容 */
.review-content {
  background: var(--card-color);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.content-label {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--text-color);
  display: block;
  margin-bottom: 20rpx;
}

.review-textarea {
  width: 100%;
  height: 200rpx;
  background: var(--background-color);
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: var(--text-color);
  box-sizing: border-box;
  border: 1rpx solid var(--border-color);
}

.char-count {
  font-size: 22rpx;
  color: var(--text-light);
  text-align: right;
  display: block;
  margin-top: 10rpx;
}

/* 评价标签 */
.review-tags {
  background: var(--card-color);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.tags-label {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--text-color);
  display: block;
  margin-bottom: 20rpx;
}

.tags-list {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.tag-item {
  padding: 12rpx 20rpx;
  background: var(--background-color);
  border-radius: 20rpx;
  font-size: 24rpx;
  color: var(--text-color);
  border: 1rpx solid var(--border-color);
  transition: all 0.3s;
}

.tag-item.active {
  background: var(--primary-color);
  color: white;
  border-color: var(--primary-color);
}

/* 表单操作 */
.form-actions {
  display: flex;
  gap: 20rpx;
  padding: 20rpx;
}

/* 评价列表 */
.review-list {
  padding: 20rpx;
}

.list-header {
  background: var(--card-color);
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.list-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-color);
  display: block;
  margin-bottom: 20rpx;
}

.filter-tabs {
  display: flex;
  gap: 20rpx;
}

.tab-item {
  padding: 10rpx 20rpx;
  background: var(--background-color);
  border-radius: 16rpx;
  font-size: 26rpx;
  color: var(--text-color);
  transition: all 0.3s;
}

.tab-item.active {
  background: var(--primary-color);
  color: white;
}

/* 评价项目 */
.review-items {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.review-item {
  background: var(--card-color);
  border-radius: 16rpx;
  padding: 20rpx;
  overflow: hidden;
}

.review-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.reviewer-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.reviewer-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}

.reviewer-details {
  flex: 1;
}

.reviewer-name {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--text-color);
  display: block;
  margin-bottom: 8rpx;
}

.review-rating {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.rating-stars {
  display: flex;
}

.star-item {
  font-size: 24rpx;
  color: #ddd;
}

.star-item.active {
  color: #FFD700;
}

.rating-score {
  font-size: 24rpx;
  color: var(--primary-color);
  font-weight: bold;
}

.review-time {
  font-size: 22rpx;
  color: var(--text-light);
}

.review-content {
  margin-bottom: 15rpx;
}

.review-text {
  font-size: 26rpx;
  color: var(--text-color);
  line-height: 1.6;
  margin-bottom: 10rpx;
  display: block;
}

.review-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag-item {
  padding: 6rpx 12rpx;
  background: rgba(255, 107, 107, 0.1);
  border-radius: 12rpx;
  font-size: 20rpx;
  color: var(--primary-color);
}

.review-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 15rpx;
  border-top: 1rpx solid var(--border-color);
}

.service-info {
  flex: 1;
}

.service-title {
  font-size: 24rpx;
  color: var(--text-color);
  display: block;
  margin-bottom: 5rpx;
}

.service-provider {
  font-size: 22rpx;
  color: var(--text-light);
  display: block;
}

.review-actions {
  display: flex;
  gap: 10rpx;
}

.like-icon {
  font-size: 24rpx;
  margin-right: 5rpx;
}

.like-count {
  font-size: 22rpx;
} 