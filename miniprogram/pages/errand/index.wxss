/* errand/index.wxss */

.container {
  padding: 0;
  background: #F8F9FA;
}

/* 搜索栏 */
.search-section {
  background: #FFFFFF;
  padding: 20rpx;
  position: sticky;
  top: 0;
  z-index: 10;
}

.search-bar {
  display: flex;
  align-items: center;
  background: #F8F9FA;
  border-radius: 24rpx;
  padding: 0 20rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 15rpx;
}

.search-input {
  flex: 1;
  height: 60rpx;
  font-size: 28rpx;
  color: #2C3E50;
}

.search-btn {
  background: #FF6B6B;
  color: white;
  border-radius: 20rpx;
  padding: 8rpx 20rpx;
  font-size: 24rpx;
  margin-left: 15rpx;
}

/* 筛选栏 */
.filter-section {
  background: #FFFFFF;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #E9ECEF;
}

.filter-scroll {
  white-space: nowrap;
}

.filter-list {
  display: flex;
  padding: 0 20rpx;
}

.filter-item {
  padding: 12rpx 24rpx;
  margin-right: 20rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #7F8C8D;
  background: #F8F9FA;
  border: 1rpx solid #E9ECEF;
  flex-shrink: 0;
}

.filter-item.active {
  background: #FF6B6B;
  color: white;
  border-color: #FF6B6B;
}

/* 排序栏 */
.sort-section {
  background: #FFFFFF;
  padding: 20rpx;
  display: flex;
  gap: 30rpx;
  border-bottom: 1rpx solid #E9ECEF;
}

.sort-item {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  background: #F8F9FA;
}

.sort-item.active {
  background: #FF6B6B;
}

.sort-text {
  font-size: 26rpx;
  color: #2C3E50;
}

.sort-item.active .sort-text {
  color: white;
}

/* 任务列表 */
.task-list {
  padding: 20rpx;
}

.task-item {
  background: #FFFFFF;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #E9ECEF;
}

.task-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2C3E50;
  flex: 1;
  margin-right: 20rpx;
}

.task-status {
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.status-publishing {
  background: rgba(255, 193, 7, 0.1);
  color: #FFC107;
}

.status-accepted {
  background: rgba(78, 205, 196, 0.1);
  color: #4ECDC4;
}

.status-done {
  background: rgba(152, 216, 200, 0.1);
  color: #98D8C8;
}

.status-canceled {
  background: rgba(255, 160, 122, 0.1);
  color: #FFA07A;
}

.task-content {
  display: flex;
  padding: 20rpx;
  gap: 20rpx;
}

.task-info {
  flex: 1;
}

.task-desc {
  font-size: 26rpx;
  color: #2C3E50;
  line-height: 1.5;
  margin-bottom: 15rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.task-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.task-location {
  display: flex;
  align-items: center;
}

.location-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.location-text {
  font-size: 22rpx;
  color: #7F8C8D;
}

.task-time {
  font-size: 22rpx;
  color: #7F8C8D;
}

.task-price {
  display: flex;
  align-items: center;
  flex-shrink: 0;
}

.price-symbol {
  font-size: 24rpx;
  color: #FF6B6B;
  margin-right: 4rpx;
}

.price-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF6B6B;
}

.task-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-top: 1rpx solid #E9ECEF;
}

.publisher-info {
  display: flex;
  align-items: center;
}

.publisher-avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.publisher-name {
  font-size: 24rpx;
  color: #2C3E50;
  margin-right: 10rpx;
}

.credit-score {
  font-size: 22rpx;
  color: #FF6B6B;
  background: rgba(255, 107, 107, 0.1);
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.task-actions {
  display: flex;
  gap: 10rpx;
}

.task-actions .btn {
  font-size: 22rpx;
  padding: 8rpx 16rpx;
}

/* 发布按钮 */
.publish-btn {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  background: #FF6B6B;
  color: white;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.3);
  z-index: 100;
}

.publish-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.publish-text {
  font-size: 26rpx;
  font-weight: bold;
} 