/* 支付测试页面样式 */
.payment-test-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  color: white;
  text-align: center;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.header-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 支付结果 */
.payment-result {
  background: white;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.result-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin: 0 auto 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
}

.result-icon.success {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
}

.result-icon.fail {
  background: linear-gradient(135deg, #f44336, #d32f2f);
  color: white;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
  color: #333;
}

.result-actions {
  display: flex;
  gap: 20rpx;
  justify-content: center;
}

.btn-retry, .btn-back {
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  border: none;
}

.btn-retry {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
}

.btn-back {
  background: #f0f0f0;
  color: #666;
}

/* 测试表单 */
.test-form {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.form-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.amount-input {
  display: flex;
  align-items: center;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 20rpx;
  background: #fafafa;
}

.currency {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.input-field {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.amount-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  text-align: center;
}

.form-actions {
  margin-bottom: 40rpx;
}

.btn-test {
  width: 100%;
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.btn-test:disabled {
  background: #ccc;
  color: #999;
}

/* 测试说明 */
.test-notice {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 30rpx;
  border-left: 6rpx solid #667eea;
}

.notice-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.notice-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 10rpx;
}

/* 订单历史 */
.order-history {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.history-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.empty-history {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 60rpx 0;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.history-item {
  border: 2rpx solid #f0f0f0;
  border-radius: 12rpx;
  padding: 30rpx;
  background: #fafafa;
  transition: all 0.3s ease;
}

.history-item:active {
  background: #f0f0f0;
  transform: scale(0.98);
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.order-no {
  font-size: 26rpx;
  color: #666;
  font-family: monospace;
}

.order-status {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-weight: bold;
}

.order-status.paid {
  background: #e8f5e8;
  color: #4CAF50;
}

.order-status.pending {
  background: #fff3e0;
  color: #ff9800;
}

.order-status.failed {
  background: #ffebee;
  color: #f44336;
}

.item-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.service-title {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.amount {
  font-size: 32rpx;
  color: #4CAF50;
  font-weight: bold;
}

.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.create-time {
  font-size: 24rpx;
  color: #999;
}

.tap-tip {
  font-size: 24rpx;
  color: #667eea;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .payment-test-container {
    padding: 15rpx;
  }
  
  .page-header {
    padding: 30rpx 20rpx;
  }
  
  .test-form {
    padding: 30rpx;
  }
  
  .order-history {
    padding: 30rpx;
  }
} 