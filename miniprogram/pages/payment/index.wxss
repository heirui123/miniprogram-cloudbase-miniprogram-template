.payment-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

/* 支付结果 */
.payment-result {
  background: white;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  margin-top: 100rpx;
}

.result-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin: 0 auto 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.result-icon.success {
  background-color: #07c160;
}

.result-icon.fail {
  background-color: #ff4d4f;
}

.result-icon .iconfont {
  font-size: 60rpx;
  color: white;
}

.result-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 60rpx;
}

.result-actions {
  display: flex;
  gap: 20rpx;
  justify-content: center;
}

.btn-retry, .btn-back {
  padding: 20rpx 40rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  border: none;
}

.btn-retry {
  background-color: #07c160;
  color: white;
}

.btn-back {
  background-color: #f0f0f0;
  color: #333;
}

/* 支付表单 */
.payment-form {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
}

/* 订单信息 */
.order-info {
  margin-bottom: 40rpx;
}

.info-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
}

.info-item {
  display: flex;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  line-height: 1.5;
}

.info-item .label {
  color: #666;
  width: 160rpx;
  flex-shrink: 0;
}

.info-item .value {
  color: #333;
  flex: 1;
}

/* 支付金额 */
.payment-amount {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 40rpx 0;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
}

.amount-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.amount-value {
  font-size: 60rpx;
  font-weight: bold;
  color: #ff4d4f;
}

/* 支付方式 */
.payment-method {
  margin-bottom: 40rpx;
}

.method-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
}

.method-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #f8f8f8;
  border-radius: 15rpx;
  border: 2rpx solid #07c160;
}

.method-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.method-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.method-selected {
  color: #07c160;
}

.method-selected .iconfont {
  font-size: 32rpx;
}

/* 支付按钮 */
.payment-actions {
  margin-bottom: 40rpx;
}

.btn-pay {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #07c160, #00a854);
  color: white;
  border: none;
  border-radius: 15rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.btn-pay:disabled {
  background: #ccc;
}

.btn-cancel {
  width: 100%;
  height: 88rpx;
  background-color: #f0f0f0;
  color: #666;
  border: none;
  border-radius: 15rpx;
  font-size: 28rpx;
}

/* 支付说明 */
.payment-notice {
  background-color: #f8f8f8;
  border-radius: 15rpx;
  padding: 30rpx;
}

.notice-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.notice-item {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 10rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
} 