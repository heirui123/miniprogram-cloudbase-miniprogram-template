/* pet-service/index.wxss */

.container {
  padding: 0;
  background: #F8F9FA;
}

/* 搜索栏 */
.search-bar {
  padding: 20rpx 30rpx;
  background: #FFFFFF;
  border-bottom: 1rpx solid #E9ECEF;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background: #F8F9FA;
  border-radius: 24rpx;
  padding: 0 20rpx;
}

.search-icon-text {
  font-size: 28rpx;
  margin-right: 15rpx;
}

.search-input {
  flex: 1;
  height: 60rpx;
  font-size: 28rpx;
  color: #2C3E50;
}

/* 搜索历史 */
.search-history {
  background: #FFFFFF;
  border-bottom: 1rpx solid #E9ECEF;
  padding: 20rpx 30rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.history-title {
  font-size: 28rpx;
  color: #2C3E50;
  font-weight: 500;
}

.clear-history {
  font-size: 24rpx;
  color: #7F8C8D;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  background: #F8F9FA;
}

.history-list {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background: #F8F9FA;
  border-radius: 20rpx;
  border: 2rpx solid #E9ECEF;
  transition: all 0.3s ease;
}

.history-item:active {
  background: #E9ECEF;
  transform: scale(0.95);
}

.history-keyword {
  font-size: 26rpx;
  color: #2C3E50;
  margin-right: 10rpx;
}

.history-icon {
  font-size: 22rpx;
  color: #7F8C8D;
}

/* 搜索建议 */
.search-suggestions {
  background: #FFFFFF;
  border-bottom: 1rpx solid #E9ECEF;
  padding: 20rpx 30rpx;
}

.suggestions-title {
  font-size: 28rpx;
  color: #2C3E50;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.suggestions-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.suggestion-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 20rpx;
  background: #F8F9FA;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.suggestion-item:active {
  background: #E9ECEF;
  transform: scale(0.98);
}

.suggestion-text {
  font-size: 28rpx;
  color: #2C3E50;
}

.suggestion-type {
  font-size: 22rpx;
  color: #7F8C8D;
  background: #E9ECEF;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
}

/* 分类筛选 */
.filter-section {
  background: #FFFFFF;
  border-bottom: 1rpx solid #E9ECEF;
  padding: 20rpx 0;
}

.category-scroll {
  white-space: nowrap;
}

.category-list {
  display: flex;
  padding: 0 30rpx;
  gap: 20rpx;
}

.category-item {
  display: inline-block;
  padding: 12rpx 24rpx;
  background: #F8F9FA;
  border: 2rpx solid #E9ECEF;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #2C3E50;
  white-space: nowrap;
  transition: all 0.3s ease;
}

.category-item.active {
  background: #667eea;
  border-color: #667eea;
  color: #FFFFFF;
}

.category-item:active {
  transform: scale(0.95);
}

/* 排序筛选 */
.sort-section {
  display: flex;
  background: #FFFFFF;
  border-bottom: 1rpx solid #E9ECEF;
  padding: 0 30rpx;
}

.sort-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 26rpx;
  color: #7F8C8D;
  border-bottom: 4rpx solid transparent;
  transition: all 0.3s ease;
}

.sort-item.active {
  color: #667eea;
  border-bottom-color: #667eea;
}

.sort-item:active {
  background: #F8F9FA;
}

/* 价格筛选 */
.price-filter-section {
  background: #FFFFFF;
  border-bottom: 1rpx solid #E9ECEF;
  padding: 20rpx 0;
  display: flex;
  align-items: center;
}

.price-scroll {
  flex: 1;
  white-space: nowrap;
}

.price-list {
  display: flex;
  padding: 0 30rpx;
  gap: 15rpx;
}

.price-item {
  display: inline-block;
  padding: 10rpx 20rpx;
  background: #F8F9FA;
  border: 2rpx solid #E9ECEF;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: #2C3E50;
  white-space: nowrap;
  transition: all 0.3s ease;
}

.price-item.active {
  background: #667eea;
  border-color: #667eea;
  color: #FFFFFF;
}

.price-item:active {
  transform: scale(0.95);
}

.reset-filters {
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  font-size: 24rpx;
  color: #7F8C8D;
  gap: 8rpx;
}

.reset-icon {
  font-size: 22rpx;
}

/* 筛选状态 */
.filter-status {
  background: #FFFFFF;
  border-bottom: 1rpx solid #E9ECEF;
  padding: 20rpx 30rpx;
}

.status-text {
  font-size: 26rpx;
  color: #7F8C8D;
  margin-bottom: 15rpx;
}

.status-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.status-tag {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  background: #667eea;
  color: #FFFFFF;
  border-radius: 16rpx;
  font-size: 24rpx;
  gap: 8rpx;
}

.remove-tag {
  font-size: 20rpx;
  font-weight: bold;
  padding: 2rpx 6rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
}

/* 服务列表 */
.service-list {
  padding: 20rpx 30rpx;
}

.service-item {
  background: #FFFFFF;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.service-item:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

.service-image {
  width: 100%;
  height: 300rpx;
  background: #F8F9FA;
}

.service-info {
  padding: 20rpx;
}

.service-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 15rpx;
}

.service-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: bold;
  color: #2C3E50;
  line-height: 1.4;
  margin-right: 15rpx;
}

.service-status {
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
  white-space: nowrap;
}

.status-publishing {
  background: rgba(152, 216, 200, 0.1);
  color: #98D8C8;
}

.status-accepted {
  background: rgba(69, 183, 209, 0.1);
  color: #45B7D1;
}

.status-done {
  background: rgba(127, 140, 141, 0.1);
  color: #7F8C8D;
}

.status-canceled {
  background: rgba(255, 160, 122, 0.1);
  color: #FFA07A;
}

.service-desc {
  font-size: 26rpx;
  color: #7F8C8D;
  line-height: 1.5;
  margin-bottom: 15rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.service-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.service-location {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.location-icon {
  font-size: 22rpx;
  color: #7F8C8D;
}

.location-text {
  font-size: 24rpx;
  color: #7F8C8D;
}

.service-time {
  font-size: 24rpx;
  color: #7F8C8D;
}

.service-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.service-price {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
}

.price-symbol {
  font-size: 24rpx;
  color: #FF6B6B;
  font-weight: bold;
}

.price-value {
  font-size: 32rpx;
  color: #FF6B6B;
  font-weight: bold;
}

.price-unit {
  font-size: 22rpx;
  color: #7F8C8D;
}

.provider-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.provider-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #F8F9FA;
}

.provider-details {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.provider-name {
  font-size: 24rpx;
  color: #2C3E50;
  font-weight: 500;
}

.provider-rating {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.rating-stars {
  font-size: 20rpx;
  color: #F39C12;
}

.rating-score {
  font-size: 22rpx;
  color: #7F8C8D;
}

/* 发布按钮 */
.publish-btn {
  position: fixed;
  right: 30rpx;
  bottom: 120rpx;
  display: flex;
  align-items: center;
  background: #FF6B6B;
  color: white;
  padding: 20rpx 30rpx;
  border-radius: 50rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 107, 0.3);
  z-index: 100;
}

.publish-icon-text {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.publish-btn text {
  font-size: 28rpx;
  font-weight: 500;
}

/* 空状态和加载状态 */
.empty, .loading {
  padding: 100rpx 30rpx;
  text-align: center;
  color: #7F8C8D;
  font-size: 28rpx;
} 