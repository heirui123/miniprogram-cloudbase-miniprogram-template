/* order-detail/index.wxss */

.container {
  padding: 0;
  background: #F8F9FA;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 订单状态 */
.status-section {
  padding: 20rpx;
}

.status-card {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.status-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.status-pending {
  background: rgba(255, 193, 7, 0.1);
}

.status-in-progress {
  background: rgba(69, 183, 209, 0.1);
}

.status-completed {
  background: rgba(76, 175, 80, 0.1);
}

.status-canceled {
  background: rgba(255, 160, 122, 0.1);
}

.icon-text {
  font-size: 40rpx;
}

.status-info {
  flex: 1;
}

.status-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2C3E50;
  margin-bottom: 8rpx;
}

.status-desc {
  font-size: 26rpx;
  color: #7F8C8D;
}

/* 接自己单的特殊提示 */
.own-service-notice {
  background: rgba(255, 193, 7, 0.1);
  border: 2rpx solid rgba(255, 193, 7, 0.3);
  border-radius: 12rpx;
  padding: 20rpx;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
}

.notice-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.notice-content {
  flex: 1;
}

.notice-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #F39C12;
  margin-bottom: 4rpx;
}

.notice-desc {
  font-size: 24rpx;
  color: #E67E22;
}

/* 卡片通用样式 */
.card {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2C3E50;
  margin-bottom: 20rpx;
}

/* 服务信息 */
.service-content {
  display: flex;
  gap: 20rpx;
}

.service-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.service-details {
  flex: 1;
}

.service-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #2C3E50;
  margin-bottom: 10rpx;
  line-height: 1.4;
}

.service-desc {
  font-size: 26rpx;
  color: #7F8C8D;
  line-height: 1.5;
  margin-bottom: 15rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.service-price {
  display: flex;
  align-items: baseline;
}

.price-symbol {
  font-size: 28rpx;
  color: #FF6B6B;
  margin-right: 4rpx;
}

.price-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #FF6B6B;
}

.price-unit {
  font-size: 24rpx;
  color: #7F8C8D;
  margin-left: 8rpx;
}

/* 用户信息 */
.user-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.user-item {
  display: flex;
  align-items: center;
}

.user-label {
  font-size: 26rpx;
  color: #7F8C8D;
  width: 120rpx;
  flex-shrink: 0;
}

.user-detail {
  display: flex;
  align-items: center;
  flex: 1;
}

.user-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}

.user-info-text {
  flex: 1;
}

.user-name {
  font-size: 28rpx;
  color: #2C3E50;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.user-meta {
  display: flex;
  gap: 15rpx;
}

.credit-score {
  font-size: 22rpx;
  color: #FF6B6B;
}

.member-level {
  font-size: 22rpx;
  color: #4ECDC4;
  background: rgba(78, 205, 196, 0.1);
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

/* 订单信息 */
.info-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.info-label {
  font-size: 26rpx;
  color: #7F8C8D;
  flex-shrink: 0;
}

.info-value {
  font-size: 26rpx;
  color: #2C3E50;
  flex: 1;
  text-align: right;
  word-break: break-all;
}

/* 支付信息 */
.payment-content {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.payment-status,
.payment-amount,
.payment-time {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.payment-label {
  font-size: 26rpx;
  color: #7F8C8D;
}

.payment-value {
  font-size: 26rpx;
  color: #2C3E50;
  font-weight: 500;
}

.payment-success {
  color: #4CAF50;
}

.payment-pending {
  color: #FFC107;
}

/* 时间线 */
.timeline {
  position: relative;
}

.timeline::before {
  content: '';
  position: absolute;
  left: 20rpx;
  top: 0;
  bottom: 0;
  width: 2rpx;
  background: #E9ECEF;
}

.timeline-item {
  position: relative;
  display: flex;
  margin-bottom: 30rpx;
}

.timeline-item:last-child {
  margin-bottom: 0;
}

.timeline-icon {
  position: relative;
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.timeline-dot {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #E9ECEF;
  border: 4rpx solid #FFFFFF;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.timeline-dot.active {
  background: #FF6B6B;
  border-color: #FFFFFF;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 107, 0.3);
}

.timeline-content {
  flex: 1;
  padding-top: 8rpx;
}

.timeline-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #2C3E50;
  margin-bottom: 8rpx;
}

.timeline-desc {
  font-size: 26rpx;
  color: #7F8C8D;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.timeline-time {
  font-size: 24rpx;
  color: #7F8C8D;
}

/* 操作按钮 */
.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFFFFF;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #E9ECEF;
  display: flex;
  gap: 15rpx;
  z-index: 100;
}

.btn {
  flex: 1;
  padding: 20rpx 30rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-outline {
  background: transparent;
  color: #7F8C8D;
  border: 1rpx solid #E9ECEF;
}

.btn-primary {
  background: #FF6B6B;
  color: #FFFFFF;
}

.btn-secondary {
  background: #4ECDC4;
  color: #FFFFFF;
}

.btn-warning {
  background: #FFC107;
  color: #FFFFFF;
}

.btn-danger {
  background: #FF5722;
  color: #FFFFFF;
}

.btn-success {
  background: #4CAF50;
  color: #FFFFFF;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .service-content {
    flex-direction: column;
  }
  
  .service-image {
    width: 100%;
    height: 200rpx;
  }
  
  .action-buttons {
    flex-wrap: wrap;
  }
  
  .btn {
    min-width: 120rpx;
  }
} 