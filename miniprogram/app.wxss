/* app.wxss - 温馨社区风格全局样式 */

/* 全局变量 */
page {
  --primary-color: #FF6B6B;
  --secondary-color: #4ECDC4;
  --accent-color: #45B7D1;
  --warning-color: #FFA07A;
  --success-color: #98D8C8;
  --text-color: #2C3E50;
  --text-light: #7F8C8D;
  --background-color: #F8F9FA;
  --card-color: #FFFFFF;
  --border-color: #E9ECEF;
  
  background-color: var(--background-color);
  color: var(--text-color);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
}

/* 通用容器 */
.container {
  padding: 20rpx;
  min-height: 100vh;
}

.card {
  background: var(--card-color);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 按钮样式 */
.btn {
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  padding: 20rpx 32rpx;
  border: none;
  transition: all 0.3s ease;
}

.btn-primary {
  background: var(--primary-color);
  color: white;
}

.btn-primary:active {
  background: #E55A5A;
}

.btn-secondary {
  background: var(--secondary-color);
  color: white;
}

.btn-outline {
  background: transparent;
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
}

.btn-outline:active {
  background: var(--primary-color);
  color: white;
}

.btn-small {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
}

.btn-large {
  padding: 28rpx 40rpx;
  font-size: 32rpx;
}

/* 文本样式 */
.text-primary {
  color: var(--primary-color);
}

.text-secondary {
  color: var(--secondary-color);
}

.text-accent {
  color: var(--accent-color);
}

.text-light {
  color: var(--text-light);
}

.text-center {
  text-align: center;
}

.text-right {
  text-align: right;
}

.text-bold {
  font-weight: bold;
}

.text-large {
  font-size: 36rpx;
}

.text-medium {
  font-size: 28rpx;
}

.text-small {
  font-size: 24rpx;
}

/* 布局样式 */
.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-center {
  justify-content: center;
  align-items: center;
}

.flex-between {
  justify-content: space-between;
  align-items: center;
}

.flex-around {
  justify-content: space-around;
  align-items: center;
}

.flex-1 {
  flex: 1;
}

/* 间距样式 */
.mt-10 { margin-top: 10rpx; }
.mt-20 { margin-top: 20rpx; }
.mt-30 { margin-top: 30rpx; }
.mb-10 { margin-bottom: 10rpx; }
.mb-20 { margin-bottom: 20rpx; }
.mb-30 { margin-bottom: 30rpx; }
.ml-10 { margin-left: 10rpx; }
.ml-20 { margin-left: 20rpx; }
.mr-10 { margin-right: 10rpx; }
.mr-20 { margin-right: 20rpx; }

.p-10 { padding: 10rpx; }
.p-20 { padding: 20rpx; }
.p-30 { padding: 30rpx; }
.pt-10 { padding-top: 10rpx; }
.pt-20 { padding-top: 20rpx; }
.pb-10 { padding-bottom: 10rpx; }
.pb-20 { padding-bottom: 20rpx; }
.pl-10 { padding-left: 10rpx; }
.pl-20 { padding-left: 20rpx; }
.pr-10 { padding-right: 10rpx; }
.pr-20 { padding-right: 20rpx; }

/* 分割线 */
.divider {
  height: 1rpx;
  background: var(--border-color);
  margin: 20rpx 0;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.tag-primary {
  background: rgba(255, 107, 107, 0.1);
  color: var(--primary-color);
}

.tag-secondary {
  background: rgba(78, 205, 196, 0.1);
  color: var(--secondary-color);
}

.tag-success {
  background: rgba(152, 216, 200, 0.1);
  color: var(--success-color);
}

/* 头像样式 */
.avatar {
  border-radius: 50%;
  border: 2rpx solid var(--border-color);
}

.avatar-small {
  width: 60rpx;
  height: 60rpx;
}

.avatar-medium {
  width: 80rpx;
  height: 80rpx;
}

.avatar-large {
  width: 120rpx;
  height: 120rpx;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx;
  color: var(--text-light);
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 80rpx 40rpx;
  color: var(--text-light);
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

/* 价格样式 */
.price {
  color: var(--primary-color);
  font-weight: bold;
}

.price-large {
  font-size: 36rpx;
}

.price-medium {
  font-size: 28rpx;
}

.price-small {
  font-size: 24rpx;
}

/* 评分样式 */
.rating {
  color: #FFD700;
  font-size: 24rpx;
}

/* 状态标签 */
.status {
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.status-pending {
  background: rgba(255, 160, 122, 0.1);
  color: var(--warning-color);
}

.status-processing {
  background: rgba(69, 183, 209, 0.1);
  color: var(--accent-color);
}

.status-completed {
  background: rgba(152, 216, 200, 0.1);
  color: var(--success-color);
}

.status-cancelled {
  background: rgba(127, 140, 141, 0.1);
  color: var(--text-light);
}

/* 响应式布局 */
@media (max-width: 750rpx) {
  .container {
    padding: 16rpx;
  }
  
  .card {
    padding: 20rpx;
  }
} 